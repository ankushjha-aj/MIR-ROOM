# Environment Variables Example
# Copy this file to .env.local and update with your values

# Application
NEXT_PUBLIC_APP_NAME="Army Medical Records"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API (for future backend integration)
NEXT_PUBLIC_API_URL="http://localhost:8000/api"
API_SECRET_KEY="your-secret-key-here"

# Database (for future integration)
DATABASE_URL="postgresql://user:password@localhost:5432/medical_records"

# Authentication (for future integration)
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRE_TIME="24h"

# Email (for future integration)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"

# File Upload (for future integration)
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,doc,docx"
